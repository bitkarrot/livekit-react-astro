---
// src/pages/exit.astro
import '~/assets/styles/globals.css';
import '@livekit/components-styles';
import '@livekit/components-styles/prefabs';
import Layout from '~/layouts/LKLayout.astro';

---

<Layout title="Hivetalk Video Conference">
    <div class="min-h-screen flex flex-col items-center justify-center bg-gray-900 p-4">
      <div class="max-w-md w-full bg-gray-800 rounded-lg shadow-lg p-8">
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold text-white mb-2">Thank You</h1>
          <p class="text-gray-300">Your meeting has ended</p>
        </div>
        <div class="space-y-6">
          <a href="/" class="inline-block w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200 text-center">Back to Home</a>
        </div>
      </div>
    </div>
</Layout>
